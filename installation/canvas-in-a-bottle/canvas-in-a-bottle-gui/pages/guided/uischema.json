{
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "Control",
      "scope": "#/properties/cleanUp",
      "label": "Delete disposable Cluster if it exists?",
      "options": {
        "toggle": true
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/kind",
      "label": "Install disposable Cluster?",
      "options": {
        "toggle": true
      }
    },
    {
      "type": "HorizontalLayout",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/dashboard",
          "label": "Install Kubernetes Dashboard?",
          "options": {
            "toggle": true
          }
        },
        {
          "type": "Control",
          "scope": "#/properties/dashboardPort",
          "label": "Dashboard port (default 8443)",
          "rule": {
            "effect": "HIDE",
            "condition": {
              "scope": "#/properties/dashboard",
              "schema": {
                "const": false
              }
            }
          }
        }
      ]
    },
    {
      "type": "HorizontalLayout",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/grafana",
          "options": {
            "toggle": true
          }
        },
        {
          "type": "Control",
          "scope": "#/properties/grafanaPort",
          "label": "Grafana port (default 3001)",
          "rule": {
            "effect": "HIDE",
            "condition": {
              "scope": "#/properties/grafana",
              "schema": {
                "const": false
              }
            }
          }
        }
      ]
    },
    {
      "type": "Control",
      "scope": "#/properties/canvas",
      "label": "Install TMF Canvas?",
      "options": {
        "toggle": true
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/istioKiali",
      "label": "Install Kiali?",
      "options": {
        "toggle": true
      }
    },
    {
      "type": "Control",
      "scope": "#/properties/kubeMonitoring",
      "label": "Install Kube Monitoring scripts? (Heavy workload)",
      "options": {
        "toggle": true
      }
    },
    {
      "type": "Control",
      "label": "Install Reference TMF APIs",
      "scope": "#/properties/installReferenceAPIs",
      "options": {
        "toggle": true
      }
    },
    {
      "type": "Control",
      "label": "DockerHub Token",
      "scope": "#/properties/dockerHubToken",     
      "rule": {
        "effect": "HIDE",
        "condition": {
          "scope": "#/properties/installReferenceAPIs",
          "schema": {
            "const": false
          }
        }
      }
    },
    {
      "type": "Control",
      "label": "Select APIs to Install",
      "scope": "#/properties/individualAPIs",     
      "rule": {
        "effect": "HIDE",
        "condition": {
          "scope": "#/properties/installReferenceAPIs",
          "schema": {
            "const": false
          }
        }
      }
    },
    {
      "type": "Control",
      "label": "Install Use Case Controllers",
      "scope": "#/properties/useCaseToggle",
      "options": {
        "toggle": true
      }     
    },
    {
      "type": "Control",
      "label": "Which Use Case Controller to Install",
      "scope": "#/properties/useCaseController",
      "options": {
        "toggle": true
      },          
      "rule": {
        "effect": "HIDE",
        "condition": {
          "scope": "#/properties/useCaseToggle",
          "schema": {
            "const": false
          }
        }
      }
    }
  ]
}